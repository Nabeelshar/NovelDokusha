<?xml version="1.0" encoding="utf-8"?>
<resources>

	<color name="black">#F4F0E7</color>
	<color name="black_text">#181717</color>

	<style name="AppTheme.BaseDark.Black">
		<item name="colorPrimary">@color/black</item>
		<item name="colorPrimaryTransparent">@color/color_00_transparent</item>
		<item name="colorPrimaryDark">?colorPrimary</item>
		<item name="colorOnPrimary">@color/black_text</item>
		<item name="colorSecondary">?colorPrimary</item>
		<item name="colorOnSecondary">?colorOnPrimary</item>
		<item name="colorSurface">?colorPrimary</item>
		<item name="colorOnSurface">?colorOnPrimary</item>
		<item name="colorOnBackground">?colorOnPrimary</item>

		<item name="android:colorBackground">?colorPrimary</item>

		<item name="myColorControlNormalPale">@color/color_55</item>

		<item name="bottomSheetDialogTheme">?colorPrimary</item>
	</style>

	<style name="myBottomSheetStyle.BaseDark.Black">
		<!-- Using tint instead of background color (works for unknown reasons) -->
		<!-- Having #000 triggers other color (unknown reason), use #010101-->
		<item name="backgroundTint">@color/black</item>
	</style>

	<style name="myBottomSheetDialogStyle.BaseDark.Black">
		<item name="bottomSheetStyle">?colorPrimary</item>
	</style>

</resources>
